{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": ["es2022"],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "inlineSources": true,
        "resolveJsonModule": true,
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.js", "dist"]
}
